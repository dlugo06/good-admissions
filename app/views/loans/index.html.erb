<div class="btn-group loan-listing-back-btns" role="group">
  <button type="button" class="btn btn-info">
    <%= link_to('To  Students', root_path)%>
  </button>
  <button type="button" class="btn btn-info">
    <%= link_to('All Payments', payments_path) %>
  </button>
</div>

<div class="row col-md-12">
  <div class="text-center">
    <h1>Listing Loans</h1>
  </div>
</div>

<div class="table-responsive col-md-8 col-md-offset-2">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Student</th>
        <th>Amount</th>
        <th>Date Funded</th>
        <th>Company</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @loans.each do |loan| %>
        <tr>
          <td><%= loan.student.first_name %> <%= loan.student.last_name %></td>
          <td><%= number_to_currency(loan.amount) %></td>
          <td><%= loan.pay_date.strftime("%m/%d/%Y") %></td>
          <td><%= loan.company %></td>
          <td><%= link_to 'Show', loan %></td>
          <td><%= link_to 'Edit', edit_loan_path(loan) %> </td>
          <td><%= link_to 'Destroy', loan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
