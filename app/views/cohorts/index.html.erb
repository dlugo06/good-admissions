<div class="row col-md-12">
  <div class="text-center">
    <h1>Wyncode Cohorts</h1>
  </div>
</div>
<div class="table-responsive col-md-12">
    <table class="table table-striped table-hover student-list">
      <thead>
        <tr>
          <th>Name</th>
          <th>Location</th>
          <th>Cohort number</th>
          <th>Capacity</th>
          <th>Available</th>
          <th>Start date</th>
          <th colspan="4"></th>
        </tr>
      </thead>

      <tbody>
        <% @cohorts.each do |cohort| %>
          <tr>
            <td><%= cohort.name %></td>
            <td><%= cohort.location %></td>
            <td><%= cohort.cohort_number %></td>
            <td><%= cohort.capacity %></td>
            <td><%= cohort.capacity - cohort.students.count %></td>
            <td><%= cohort.start_date %></td>
            <td><%= link_to 'View Cohort', cohort %></td>
            <% if current_user.admin? %>
              <td><%= link_to 'Edit', edit_cohort_path(cohort) %></td>
              <td><%= link_to 'Destroy', cohort, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
<br>

<% if current_user.admin? %>
  <div class="container">
      <div class="row">
        <div class="col-md-12 text-center">
            <%= link_to 'New Cohort', new_cohort_path, class: "btn btn-info btn-text-color" %>
        </div>
      </div>
  </div>
<% end %>

