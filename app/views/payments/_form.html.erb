<div class="row">
  <div class="col-md-12 text-center">
      <h2>Create A New Payment for <%= @student.full_name %> </h2>
    </div>
</div>


<div class="row" id="payment-type-selector">
  <div class="col-md-12">
    <div class="input-group" id="payment_type">

      <form id="payment_type">
        <label class="input-group-addon">
          <input type="radio" name="payment_type" value="loan">   Loan<br>
        </label>
        <label class="input-group-addon">
          <input type="radio" name="payment_type" value="check" class="check">   Check<br>
        </label>
        <label class="input-group-addon">
          <input type="radio" name="payment_type" value="stripe">   Stripe<br>
        </label>
        <label class="input-group-addon">
          <input type="radio" name="payment_type" value="wire">   Wire
        </label>
      </form>
    </div>
  </div>
</div>

<div id="payment_render">
  <%= render 'loans/form' %>
  <%= render 'checks/form' %>
  <%= render 'stripes/form' %>
  <%= render 'wires/form' %>
</div>
