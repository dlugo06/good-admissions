<p id="notice"><%= notice %></p>

<div class="btn-group loan-listing-back-btns" role="group">
  <button type="button" class="btn btn-info">
    <%= link_to('To Students', root_path, class: "button-color-white")%>
  </button>
  <button type="button" class="btn btn-info">
    <%= link_to('All Payments', payments_path, class: "button-color-white") %>
  </button>
</div>

<h1>Stripe Payments</h1>

<div class="table-responsive col-md-8 col-md-offset-2">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Student</th>
        <th>Amount</th>
        <th>Pay Date</th>
        <th>Refunded?</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @stripes.each do |stripe| %>
        <tr>
          <td><%= stripe.student.full_name %></td>
          <td><%= number_to_currency(stripe.amount) %></td>
          <td><%= stripe.pay_date.strftime("%m/%d/%Y") %></td>
          <td><%= stripe.refunded %></td>
          <td><%= link_to 'Show', stripe %></td>
          <td><%= link_to 'Edit', edit_stripe_path(stripe) %></td>
          <td><%= link_to 'Remove', stripe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
