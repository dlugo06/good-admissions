<div class="container">
    <div class="row">
      <%= link_to 'Back', stripes_path, class: "btn btn-info button-color-white", id:"stripes-show-back-btn" %>
    </div>
</div>

<div class="row span12">
  <div class="new-payment-field text-center ">
    <p>
      <strong>Student:</strong>
      <%= @stripe.student.full_name %>
    </p>
    <p>
      <strong>Amount:</strong>
      <%= number_to_currency(@stripe.amount) %>
    </p>
    <p>
      <strong>Refunded:</strong>
      <%= @stripe.refunded %>
    </p>
    <p>
      <strong>Pay Date:</strong>
      <%= @stripe.pay_date.strftime("%m/%d/%Y") %>
    </p>
  </div>
</div>

<div class="container">
    <div class="row">
      <div class="col-md-12 text-center">
          <%= link_to 'Edit', edit_stripe_path(@stripe), class: "btn btn-info button-color-white", id: "stripes-show-edit-btn"  %>
      </div>
    </div>
</div>
