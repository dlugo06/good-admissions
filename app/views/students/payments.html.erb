<div id="payment-listing">
  <h2>Listing Payments For <%= @student.full_name %></h2>
</div>

<div class="table-responsive col-md-8 col-md-offset-2">
  <table class="table">
    <thead>
      <tr class="well">
        <th>Payment Date</th>
        <th>Payment Type</th>
        <th>Amount</th>
        <!-- <th>Details</th> -->
        <!-- <th colspan="3"></th> -->
    </tr>
  </thead>
  
    <tbody>
      <% @student.payments.each do |payment| %>
        <tr>
          <td><%= payment.pay_date.strftime("%m/%d/%Y") %></td>
          <td><%= payment.class %></td>
          <td><%= number_to_currency(payment.amount) %></td>
          <td><%= link_to "Details", payment %></td>
          <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

 <div class="row new-payment col-md-2 col-md-offset-5">
  <%= link_to('New Payment', new_student_payment_path(@student), :class => 'btn btn-large btn-info') %>
</div>
