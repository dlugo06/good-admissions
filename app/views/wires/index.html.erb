<p id="notice"><%= notice %></p>

<h1>Listing Wires</h1>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wires.each do |wire| %>
      <tr>
        <td><%= wire.student %></td>
        <td><%= link_to 'Show', wire %></td>
        <td><%= link_to 'Edit', edit_wire_path(wire) %></td>
        <td><%= link_to 'Destroy', wire, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

